
public class Formulas {
	
	double answer;
	double base;
	double power;
	
	
	
	//Setters:
	//Absolute Value
	public void setAbs(double num)
	{
		answer = num;
	}
	
	//
	public void setExponent(double num1, double num2)
	{
		double base = num1;
		double power = num2;

	}
	
	//Getters
	//Absolute Value
	public double getAbs() 
	{
		if(answer < 0)
		{
			return -1 * answer;
		}
		else
		{
			return answer;
		}
	}
	
	public double getExponent()
	{
		int count = 1;
		while (power != 0) {
		count *= base;
		power--;
		}
		return power;
	}
	
	

}
